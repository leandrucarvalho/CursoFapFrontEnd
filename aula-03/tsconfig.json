{
  "compilerOptions": {
    "outDir": "out",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "out/**"],
  "include": ["**/*.ts"],
  "files": ["index.ts"]
}
